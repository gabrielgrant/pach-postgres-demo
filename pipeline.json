{
  "pipeline": {
    "name": "loader"
  },
  "transform": {
    "image": "jbergknoff/postgresql-client",
    "cmd": [
      "psql",
      "--host=$POSTGRES_SERVICE_HOST",
      "--port=$POSTGRES_SERVICE_PORT",
      "--username=postgres"
    ],
    "env": {
      "PGPASSWORD": "password"
    },
    "stdin": [
        "for fruit in apple orange banana; do",
        "   grep $fruit /pfs/data/sales | awk '{print $2}' >>/pfs/out/$fruit",
        "done"
    ]
  },
  "parallelism_spec": {
    "strategy": "CONSTANT",
    "constant": 1
  },
  "inputs": [
    {
      "repo": {
        "name": "data"
      },
      "method": "map"
    }
  ]
}
{
  "pipeline": {
    "name": "munger"
  },
  "transform": {
    "cmd": [ "sh" ],
    "stdin": [
        "for fruit in apple orange banana; do",
        "   { cat /pfs/prev/$fruit || echo 0; cat /pfs/filter/$fruit; } | awk '{s+=$1} END {print s}' > /pfs/out/$fruit",
        "done"
    ],
    "overwrite": true
  },
  "parallelism_spec": {
    "strategy": "CONSTANT",
    "constant": 1
  },
  "inputs": [
    {
      "repo": {
        "name": "filter"
      },
      "method": {
        "partition": "FILE",
        "incremental": "DIFF"
      }
    }
  ]
}
